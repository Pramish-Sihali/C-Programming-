#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int height; //declaring variable
    do
    {
        height=get_int("Height : ");
    }
    while (height<1 || height>8); //keeping range from 1 to 8

    for (int row=0; row<height;row++)
    {
        for (int space =height-row-1; space>0; space--)// loop for creating spaces
        {
            printf(" ");
        }
        for (int hash = 0; hash < row + 1; hash++) //to print hashes(#)
        {
            printf("#");
        }
        printf("  ");
        for (int right_hash = 0; right_hash < row + 1; right_hash++ ) // loop to mirror hashes
        {
            printf("#");
        }
        printf("\n"); // for new line
    }
}
